<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dadada"
    android:id="@+id/table_layout"
    android:shrinkColumns="1,2,3"
    tools:context="com.studies.sandrini.tipcalc.MainActivity">

    <TableRow
        android:id="@+id/table_row0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bill_text"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:paddingRight="5dp"
            android:text="Bill Total"
            android:textColor="#000" />

        <EditText
            android:id="@+id/bill_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:gravity="center"
            android:inputType="numberDecimal"/>

    </TableRow>
    <TableRow
        android:id="@+id/table_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ten_text"
            android:layout_column="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="10%"
            android:textColor="#000" />

        <TextView
            android:id="@+id/fifteen_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="15%"
            android:textColor="#000" />

        <TextView
            android:id="@+id/twenty_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="20%"
            android:textColor="#000" />
    </TableRow>
    <TableRow
        android:id="@+id/table_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tip_text"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:paddingRight="5dp"
            android:text="Tip"
            android:textColor="#000" />

        <EditText
            android:id="@+id/tip_ten"
            android:inputType="numberDecimal"
            android:text="0.00"
            tools:focusable="false"
            tools:longClickable="false" />

        <EditText
            android:id="@+id/tip_fifteen"
            android:inputType="numberDecimal"
            android:text="0.00"
            tools:focusable="false"
            tools:longClickable="false" />

        <EditText
            android:id="@+id/tip_twenty"
            android:inputType="numberDecimal"
            android:text="0.00"
            tools:focusable="false"
            tools:longClickable="false" />

    </TableRow>
    <TableRow
        android:id="@+id/table_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/total_text"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:paddingRight="5dp"
            android:text="Total"
            android:textColor="#000" />

        <EditText
            android:id="@+id/total_ten"
            android:inputType="numberDecimal"
            android:text="0.00"
            tools:focusable="false"
            tools:longClickable="false" />

        <EditText
            android:id="@+id/total_fifteen"
            android:inputType="numberDecimal"
            android:text="0.00"
            tools:focusable="false"
            tools:longClickable="false" />

        <EditText
            android:id="@+id/total_twenty"
            android:inputType="numberDecimal"
            android:text="0.00"
            tools:focusable="false"
            tools:longClickable="false" />
    </TableRow>
    <TableRow
        android:id="@+id/table_row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/custom_text"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:text="Custom"
            android:textColor="#000" />

        <SeekBar
            android:id="@+id/custom_tip_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:max="30"
            android:progress="18" />

        <TextView
            android:id="@+id/custom_tip_result"
            android:layout_height="match_parent"
            android:text="18%"
            android:textColor="#000" />
    </TableRow>
    <TableRow
        android:id="@+id/table_row5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/custom_text2"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:paddingRight="5dp"
            android:text="Tip"
            android:textColor="#000" />

        <EditText
            android:id="@+id/custom__tip_edit"
            android:inputType="numberDecimal"
            android:text="0.00"
            tools:focusable="false"
            tools:longClickable="false" />

        <TextView
            android:id="@+id/custom_text3"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:text="Total"
            android:textColor="#000" />

        <EditText
            android:id="@+id/total_custom"
            android:inputType="numberDecimal"
            android:text="0.00"
            tools:focusable="false"
            tools:longClickable="false" />

    </TableRow>

</TableLayout>
